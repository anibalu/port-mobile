{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "." ,
    "paths": {
       "@components/*": [
         "src/components/*"
       ],
       "@configs/*":[ "./src/configs/*"],
       "@navigation/*": ["./src/navigation/*"],
       "@screens/*": ["./src/screens/*"],
       "@store/*":["./src/store/*"],
       "@utils/*": ["./src/utils/*"],
       "@assets/*":["./assets/*"],
       "@specs/*":["./src/specs/*"],
    },
  },
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": [
    "App.tsx",
    "index.js",
    "src/**/*",
    ".prettierrc.js",
    "eslint.config.js",
    "declarations.d.ts",
  ]
}